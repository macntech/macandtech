        <a class="newer-posts p-2" href="{{page_url prev}}">&larr; Newer Posts</a>
    {{/if}}
    <span class="page-number p-2">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts p-2" href="{{page_url next}}">Older Posts &rarr;</a>
    {{/if}}
</nav>